<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.startmenu.login.Register">
   <children>
      <VBox layoutX="4.0" layoutY="4.0" prefHeight="135.0" prefWidth="277.0" spacing="15.0">
         <children>
            <HBox alignment="CENTER" prefHeight="28.0" prefWidth="253.0" spacing="15.0">
               <children>
                  <Label prefHeight="26.0" prefWidth="125.0" text="Username"/>
                  <TextField fx:id="userField" prefHeight="26.0" prefWidth="251.0">
                     <tooltip>
                        <Tooltip text="Username must be larger than 3 characters."/>
                     </tooltip>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="26.0" prefWidth="287.0" spacing="20.0">
               <children>
                  <Label prefHeight="26.0" prefWidth="79.0" text="Password">
                     <HBox.margin>
                        <Insets/>
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="passField" prefHeight="26.0" prefWidth="209.0"/>
               </children>
            </HBox>
            <Label fx:id="errorLabel" prefHeight="16.0" prefWidth="303.0" textFill="RED"/>
            <HBox alignment="CENTER" prefHeight="31.0" prefWidth="303.0" spacing="5.0"
                  stylesheets="@css/standard_button.css">
               <children>
                  <Button mnemonicParsing="false" onAction="#exitButtonClicked" text="Exit"/>
                  <Button mnemonicParsing="false" onAction="#registerButtonClicked" text="Register Account"/>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="3.0" right="5.0" top="3.0"/>
   </padding>
</AnchorPane>
