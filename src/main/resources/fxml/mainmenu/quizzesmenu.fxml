<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="700.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.mainmenu.QuizzesMenu">
    <children>
        <AnchorPane layoutX="65.0" layoutY="43.0" maxWidth="850.0">
            <children>
                <VBox layoutX="4.0" layoutY="-22.0" prefHeight="600.0" prefWidth="864.0" spacing="55.0">
                    <children>
                        <HBox spacing="525.0">
                            <children>
                                <Label text="Your Quizzes">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Label>
                                <HBox spacing="15.0" stylesheets="@../css/button.css">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#addKeyClicked" text="Add Key"/>
                                        <Button mnemonicParsing="false" onAction="#removeKeyClicked" text="Remove Key"/>
                                    </children>
                                </HBox>
                            </children>
                            <VBox.margin>
                                <Insets bottom="-50.0"/>
                            </VBox.margin>
                        </HBox>
                        <TableView fx:id="savedQuizKeys" onMouseClicked="#tableViewClicked" prefHeight="350.0"
                                   prefWidth="864.0" stylesheets="@../css/tableview.css">
                            <columns>
                                <TableColumn fx:id="nameColumn" prefWidth="89.0" text="Quiz"/>
                                <TableColumn fx:id="classColumn" prefWidth="93.0" text="Creator"/>
                                <TableColumn fx:id="keyColumn" prefWidth="75.0" text="Key"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                        <Label text="Previously Taken Quizzes">
                            <VBox.margin>
                                <Insets bottom="-50.0"/>
                            </VBox.margin>
                            <font>
                                <Font size="15.0"/>
                            </font>
                        </Label>
                        <TableView fx:id="previousQuizzes" prefHeight="350.0" prefWidth="850.0"
                                   stylesheets="@../css/tableview.css">
                            <columns>
                                <TableColumn fx:id="prevQuizName" prefWidth="75.0" text="Quiz"/>
                                <TableColumn fx:id="prevQuizClass" prefWidth="75.0" text="Creator"/>
                                <TableColumn fx:id="prevQuizScore" prefWidth="75.0" text="Score"/>
                                <TableColumn fx:id="prevQuizKey" prefWidth="100.0" text="Key"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
