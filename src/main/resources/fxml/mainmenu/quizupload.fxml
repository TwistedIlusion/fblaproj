<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<AnchorPane style="-fx-background-color: #E9E9E9;" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.mainmenu.QuizUpload">
   <children>
      <ButtonBar layoutX="460.0" layoutY="318.0" prefHeight="52.0" prefWidth="123.0"
                 stylesheets="@../css/standard_button.css">
         <buttons>
            <Button mnemonicParsing="false" onAction="#submitButtonClicked" prefHeight="22.0" prefWidth="101.0"
                    text="Submit">
               <padding>
                  <Insets bottom="15.0" right="15.0" top="15.0"/>
               </padding>
            </Button>
         </buttons>
         <padding>
            <Insets bottom="15.0" right="15.0" top="15.0"/>
         </padding>
      </ButtonBar>
      <HBox layoutX="7.0" layoutY="97.0" spacing="50.0">
         <children>
            <VBox spacing="15.0"
                  style="-fx-border-radius: 10; -fx-border-color: #303f9f; -fx-border-width: 3; -fx-padding: 15;">
               <children>
                  <Label text="Quiz Tools">
                     <font>
                        <Font size="18.0"/>
                     </font>
                  </Label>
                  <CheckBox fx:id="revealAnswersCheckBox" mnemonicParsing="false" text="Reveal Answers"/>
                  <CheckBox fx:id="enableNotePadCheckBox" mnemonicParsing="false" text="Enable Notepad"/>
                  <CheckBox fx:id="enableCalculatorCheckBox" mnemonicParsing="false" text="Enable Calculator"/>
                  <CheckBox fx:id="enableDrawingPadCheckBox" mnemonicParsing="false" text="Enable Drawing Pad"/>
               </children>
            </VBox>
            <VBox spacing="30.0">
               <children>
                  <VBox spacing="15.0"
                        style="-fx-border-radius: 10; -fx-border-color: #303f9f; -fx-border-width: 3; -fx-padding: 10;">
                     <children>
                        <Label text="Quiz Name">
                           <font>
                              <Font size="18.0"/>
                           </font>
                        </Label>
                        <HBox alignment="CENTER" spacing="15.0">
                           <children>
                              <Label text="Enter Quiz Name"/>
                              <TextField fx:id="quizNameTextField" prefHeight="26.0" prefWidth="149.0"/>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox spacing="15.0"
                        style="-fx-border-color: #303f9f; -fx-border-radius: 10; -fx-border-width: 3; -fx-padding: 10;">
                     <children>
                        <Label text="Questions">
                           <font>
                              <Font size="18.0"/>
                           </font>
                        </Label>
                        <Label fx:id="fileDisplay" text="File: ">
                           <padding>
                              <Insets bottom="-12.0"/>
                           </padding>
                        </Label>
                        <HBox spacing="15.0" stylesheets="@../css/standard_button.css">
                           <children>
                              <Button mnemonicParsing="false" onAction="#uploadExcelButtonClicked" text="Upload Excel"/>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets right="15.0"/>
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="15.0" right="15.0"/>
         </padding>
      </HBox>
      <VBox layoutX="9.0" layoutY="14.0" spacing="5.0">
         <children>
            <Label text="Quiz Preferences" textFill="#303f9f">
               <font>
                  <Font size="22.0"/>
               </font>
            </Label>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#cccccc" height="7.0" stroke="BLACK" strokeType="INSIDE"
                       strokeWidth="0.0" width="578.0"/>
         </children>
      </VBox>
   </children>
</AnchorPane>
