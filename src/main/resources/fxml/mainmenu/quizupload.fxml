<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<AnchorPane style="-fx-background-color: #E9E9E9;" stylesheets="@../css/button.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.mainmenu.QuizUpload">
   <children>
      <HBox layoutX="14.0" layoutY="62.0" spacing="30.0">
         <children>
            <VBox spacing="25.0" stylesheets="@../css/border.css">
               <children>
                  <Label text="Quiz Tools">
                     <font>
                        <Font size="18.0"/>
                     </font>
                  </Label>
                  <CheckBox fx:id="revealAnswersCheckBox" mnemonicParsing="false" text="Reveal Answers"/>
                  <CheckBox fx:id="enableNotePadCheckBox" mnemonicParsing="false" text="Enable Notepad"/>
                  <CheckBox fx:id="enableCalculatorCheckBox" mnemonicParsing="false" text="Enable Calculator"/>
                  <CheckBox fx:id="enableDrawingPadCheckBox" mnemonicParsing="false" text="Enable Drawing Pad"/>
               </children>
            </VBox>
            <VBox>
               <children>
                  <VBox spacing="15.0">
                     <children>
                        <Label text="Quiz Name">
                           <font>
                              <Font size="18.0"/>
                           </font>
                        </Label>
                        <HBox alignment="CENTER" spacing="15.0">
                           <children>
                              <TextField fx:id="quizNameTextField" promptText="Enter a Quiz Name"/>
                           </children>
                        </HBox>
                     </children>
                     <stylesheets>
                        <URL value="@../css/textfield.css"/>
                        <URL value="@../css/border.css"/>
                     </stylesheets>
                  </VBox>
                  <VBox prefHeight="132.0" prefWidth="207.0" spacing="20.0" stylesheets="@../css/border.css">
                     <children>
                        <Label text="Questions">
                           <font>
                              <Font size="18.0"/>
                           </font>
                        </Label>
                        <Label fx:id="fileDisplay" text="File: ">
                           <padding>
                              <Insets bottom="-15.0" left="5.0"/>
                           </padding>
                        </Label>
                        <HBox fillHeight="false" prefHeight="22.0" prefWidth="129.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#uploadExcelButtonClicked" text="Upload Excel"/>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
      <VBox layoutX="14.0" layoutY="14.0" spacing="5.0">
         <children>
            <Label text="Quiz Preferences" textFill="#303f9f">
               <font>
                  <Font size="22.0"/>
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="5.0"/>
         </padding>
      </VBox>
      <HBox layoutX="357.0" layoutY="292.0">
         <children>
            <Button mnemonicParsing="false" onAction="#submitButtonClicked" text="Submit"/>
         </children>
         <padding>
            <Insets bottom="10.0" right="30.0" top="15.0"/>
         </padding>
      </HBox>
   </children>
</AnchorPane>
